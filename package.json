{
  "name": "ai-brainstorm",
  "version": "1.0.0",
  "description": "Multi-AI discussion platform with role-based conversation and knowledge management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently \"nodemon --watch src --ext ts,js,json --exec 'ts-node src/index.ts'\" \"vite\"",
    "dev:backend": "nodemon --watch src --ext ts,js,json --exec \"ts-node src/index.ts\"",
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "postinstall": "npm run build",
    "test": "jest"
  },
  "keywords": [
    "ai",
    "discussion",
    "multi-model",
    "knowledge-base"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.59.0",
    "@google/generative-ai": "^0.24.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "marked": "^16.1.2",
    "moment": "^2.29.4",
    "openai": "^5.12.2",
    "uuid": "^9.0.1",
    "vite": "^7.1.1",
    "vue": "3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@railway/cli": "^4.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
