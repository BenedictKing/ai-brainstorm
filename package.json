{
  "name": "ai-brainstorm",
  "version": "1.0.0",
  "description": "Multi-AI discussion platform with role-based conversation and knowledge management",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts", //这里应该有个watch AI!
    "build": "tsc && npm run copy-public",
    "copy-public": "node -e \"const fs=require('fs'); const path=require('path'); const src='public'; const dest='dist/public'; if(!fs.existsSync('dist')) fs.mkdirSync('dist'); fs.cpSync(src, dest, {recursive: true});\"",
    "test": "jest"
  },
  "keywords": [
    "ai",
    "discussion",
    "multi-model",
    "knowledge-base"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@railway/cli": "^4.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}